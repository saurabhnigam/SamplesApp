package in.dotSlashA.intentReciever;

import android.content.BroadcastReceiver;
import android.content.Context;
import android.content.Intent;
import android.util.Log;

public class RecieverInstall extends BroadcastReceiver
{
	private String TAG = "RecieverInstall";
	/**
	 * onReceive method is used to receive broadcasting events or actions like
	 * package updated. on which our service started. and passing intent action
	 * when get notification by alarm manager using pending intent.
	 */
	@Override
	public void onReceive (final Context context, final Intent intent)
	{	
		//set action in global variabl in Application class
		
		Log.d(TAG, "before wait for next intent with action = "+intent.getAction());
		Log.d(TAG , "in RecieverUninstall Intent.EXTRA_REPLACING is "+intent.getBooleanExtra(Intent.EXTRA_REPLACING, false));
	}
	
}
